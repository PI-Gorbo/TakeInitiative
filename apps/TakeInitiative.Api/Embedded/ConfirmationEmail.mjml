<mjml>
    <mj-head>
        <mj-title>Account Confirmation</mj-title>
        <mj-preview>Confirm your email for Take Initiative</mj-preview>
        <mj-font
            name="Overpass"
            href="https://fonts.googleapis.com/css?family=Overpass"
        />
        <mj-font
            name="NovaCut"
            href="https://fonts.googleapis.com/css?family=Nova+Cut"
        />
        <mj-attributes>
            <mj-all font-family="Arial, sans-serif" color="#c8c8c8" />
            <mj-class
                name="header"
                color="#ffffff"
                background-color="#1f2b43"
                padding="20px"
                text-align="center"
            />
            <mj-class name="body" padding="20px" />
            <mj-class
                name="footer"
                color="#999999"
                padding="20px"
                text-align="center"
            />
        </mj-attributes>
    </mj-head>
    <mj-body background-color="#020617">
        <!-- Header -->
        <mj-section mj-class="header">
            <mj-column>
                <mj-text
                    font-size="30px"
                    font-weight="bold"
                    font-family="NovaCut"
                    color="#FFD28F"
                    >Welcome to Take Initiative</mj-text
                >
            </mj-column>
        </mj-section>

        <!-- Body -->
        <mj-section mj-class="body">
            <mj-column>
                <mj-text font-size="16px">
                    Thanks for signing up for Take Initiative! Please confirm
                    your email address to complete your registration by clicking
                    the button below.
                </mj-text>
                <mj-button
                    href="{{ConfirmationLink}}"
                    background-color="#FFD28F"
                    color="#020617"
                >
                    Confirm Email
                </mj-button>
                <mj-text font-size="16px">
                    If you did not sign up for this account, you can ignore this
                    email.
                </mj-text>
            </mj-column>
        </mj-section>

        <!-- Footer -->
        <mj-section mj-class="footer">
            <mj-column>
                <mj-text font-size="12px">
                    &copy; {{CurrentYear}} Take Initiative. All rights reserved.
                </mj-text>
            </mj-column>
        </mj-section>
    </mj-body>
</mjml>
