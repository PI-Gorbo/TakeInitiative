{
    "name": "nuxt-app",
    "private": true,
    "type": "module",
    "scripts": {
        "generate-api-client": "npx swagger-typescript-api -p ../TakeInitiative.Api/swagger.json -o ./layers/base/utils/api -n api.ts --axios",
        "build:main": "npm run generate-api-client && nuxt build ./layers/main",
        "build:admin": "npm run generate-api-client && nuxt build ./layers/admin",
        "dev": "npm run dev:main",
        "dev:main": "npm run generate-api-client && nuxt dev ./layers/main",
        "dev:admin": "npm run generate-api-client && nuxt dev ./layers/admin",
        "generate:main": "nuxt generate ./layers/main",
        "generate:admin": "nuxt generate ./layers/admin",
        "preview": "nuxt preview",
        "postinstall": "npm run postinstall:main && npm run postinstall:admin",
        "postinstall:main": "nuxt prepare ./layers/main",
        "postinstall:admin": "nuxt prepare ./layers/admin"
    },
    "dependencies": {
        "@fortawesome/free-solid-svg-icons": "^6.5.1",
        "@fortawesome/vue-fontawesome": "^3.0.6",
        "@microsoft/signalr": "^8.0.0",
        "@pinia/nuxt": "^0.5.1",
        "@types/node": "^20.11.24",
        "@vee-validate/yup": "^4.12.5",
        "axios": "^1.7.3",
        "date-fns": "^3.3.1",
        "expr-eval": "^2.0.2",
        "gsap": "^3.12.5",
        "pinia": "^2.1.7",
        "swagger-typescript-api": "^13.0.16",
        "vee-validate": "^4.12.5",
        "vue": "^3.4.15",
        "vue-easy-dnd": "^2.1.3",
        "vue-router": "^4.2.5",
        "vue-toastification": "^2.0.0-rc.5",
        "yup": "^1.3.3"
    },
    "devDependencies": {
        "@nuxt/devtools": "^1.0.8",
        "@nuxtjs/device": "^3.1.1",
        "@tailwindcss/forms": "^0.5.7",
        "autoprefixer": "^10.4.17",
        "daisyui": "^4.10.5",
        "nuxt": "^3.12.1",
        "postcss": "^8.4.35",
        "prettier": "^3.2.5",
        "prettier-plugin-tailwindcss": "^0.5.11",
        "tailwindcss": "^3.4.1",
        "typescript": "^5.5.4",
        "vue-tsc": "^1.8.27"
    }
}
