{
    "version": "0.2.0",
    "configurations": [
        {
            "name": ".NET Core Launch (web)",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build",
            "program": "${workspaceFolder}/apps/TakeInitiative.Api/bin/Debug/net8.0/TakeInitiative.Api.dll",
            "args": [],
            "cwd": "${workspaceFolder}/apps/TakeInitiative.Api",
            "stopAtEntry": false,
            "serverReadyAction": {
                "action": "openExternally",
                "pattern": "\\bNow listening on:\\s+(https?://\\S+)"
            },
            "env": {
                "ASPNETCORE_ENVIRONMENT": "Development"
            },
            "sourceFileMap": {
                "/Views": "${workspaceFolder}/Views"
            }
        },
        {
            "name": ".NET Core Launch (cli)",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build",
            "program": "${workspaceFolder}/apps/TakeInitiative.Cli/bin/Debug/net8.0/TakeInitiative.Cli.dll",
            "args": [],
            "cwd": "${workspaceFolder}/apps/TakeInitiative.Cli",
            "stopAtEntry": false
        },
        {
            "name": ".NET Core Attach",
            "type": "coreclr",
            "request": "attach"
        },
        {
            "name": "C#: TakeInitiative.Api.Tests",
            "type": "dotnet",
            "request": "launch",
            "projectPath": "${workspaceFolder}\\apps\\TakeInitiative.Api.Tests\\TakeInitiative.Api.Tests.csproj",
            "launchConfigurationId": "TargetFramework=;TakeInitiative.Api.Tests"
        }
    ]
}
